{
  "$schema": "http://json-schema.org/schema#",
  "title": "Metadata Model",
  "type": "object",
  "required": [
    "name",
    "abbreviation",
    "version",
    "releaseDate",
    "scope",
    "content"
  ],
  "anyOf": [
    {
      "not": {
        "type": "object"
      }
    },
    {
      "properties": {
        "field_name": {
          "not": {
            "type": "null"
          }
        }
      },
      "additionalProperties": {
        "$ref": "#"
      }
    }
  ]
}
