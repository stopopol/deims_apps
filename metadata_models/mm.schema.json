{
  "title": "DEIMS-SDR Metadata Model",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "abbreviation": {
      "type": "string"
    },
    "version": {
      "type": "number"
    },
    "releaseDate": {
      "type": "string"
    },
    "scope": {
      "type": "string"
    },
    "content": {
      "type": "object"
    }
  },
  "anyOf": [
    {
      "properties": {
        "field_name": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  ],
  "required": [
    "name",
    "abbreviation",
    "releaseDate",
    "version",
    "scope",
    "content"
  ]
}
